<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CardView_notification_group"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="5dp"
    card_view:cardBackgroundColor="@color/white_gray"
    card_view:cardCornerRadius="10dp"
    card_view:contentPadding="0dp"
    app:cardElevation="0dp"
    android:clickable="true">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants"
        android:layout_marginHorizontal="18dp">

        <TextView
            android:text="Название"
            android:id="@+id/name_notification_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="18sp"
            android:textStyle="normal"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:hyphenationFrequency="full"/>

        <TextView
            android:text="Время"
            android:id="@+id/time_notification_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:textStyle="normal"
            android:maxLines="1"
            android:hyphenationFrequency="full"/>

        <TextView
            android:text="Краткое описание"
            android:id="@+id/description_notification_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:maxLines="3"
            android:hyphenationFrequency="full"/>

        <TextView
            android:id="@+id/url_notification_group"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/type_notification_group"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/id_notification_group"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/verification_notification_group"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/status_verification_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linear_layout_item_union_staff_main">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="13dp"
        android:paddingStart="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/union_staff_name_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Структура и органы образования"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSecondary"/>
            <TextView
                android:id="@+id/union_staff_name_address1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/image_union_staff_name_main"
            android:layout_marginEnd="15dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_gravity="center_vertical|end"
            android:rotation="0"/>

    </LinearLayout>

</LinearLayout>

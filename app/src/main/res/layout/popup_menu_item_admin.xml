<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/purple_200"
    android:elevation="4dp">

    <TextView
        android:visibility="gone"
        android:id="@+id/button_owner_popup_menu_item_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Назначить владельцем"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="start|center_vertical"
        android:padding="14dp"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/button_admin_popup_menu_item_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Назначить администратором"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="start|center_vertical"
        android:padding="14dp"/>

    <TextView
        android:id="@+id/button_moderator_popup_menu_item_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Назначить модератором"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="start|center_vertical"
        android:padding="14dp"/>

    <TextView
        android:id="@+id/button_delete_popup_menu_item_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Удалить"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="start|center_vertical"
        android:padding="14dp"/>

</LinearLayout>
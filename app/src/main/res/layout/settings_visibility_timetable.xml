<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="4dp">

        <RelativeLayout
            android:id="@+id/layout_time_visibility_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/num_lesson_item_timetable_student"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="№"
                android:textStyle="normal"
                android:textSize="18sp"
                android:background="@drawable/item_time_table_item_2"
                android:textColor="@color/white"
                android:paddingStart="24dp"
                android:paddingEnd="18dp" />

            <TextView
                android:layout_toEndOf="@+id/num_lesson_item_timetable_student"
                android:id="@+id/time_lesson_item_timetable_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Время"
                android:textStyle="normal"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="18sp"
                android:layout_marginStart="8dp"/>

            <ImageView
                android:id="@+id/eye_show_time_visibility_settings"
                android:layout_toEndOf="@+id/time_lesson_item_timetable_student"
                android:layout_marginStart="20dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_eye"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/CardView_item_time_table_item_timetable_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="12dp"
            card_view:cardBackgroundColor="@color/white_gray"
            card_view:cardCornerRadius="10dp"
            card_view:contentPadding="0dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:descendantFocusability="blocksDescendants"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp">

                <RelativeLayout
                    android:id="@+id/layout_subject_visibility_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Название пары"
                        android:id="@+id/name_lesson_item_timetable_student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                    <ImageView
                        android:layout_toEndOf="@+id/name_lesson_item_timetable_student"
                        android:id="@+id/eye_show_subject_visibility_settings"
                        android:layout_marginStart="20dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_eye"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_type_visibility_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="тип пары"
                        android:id="@+id/form_lesson_item_timetable_student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="normal"/>

                    <ImageView
                        android:layout_toEndOf="@+id/form_lesson_item_timetable_student"
                        android:id="@+id/eye_show_type_visibility_settings"
                        android:layout_marginStart="20dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_eye"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_teacher_visibility_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/src_teacher_lesson_item_timetable_student"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_person"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:text="ФИО преподователя"
                        android:id="@+id/teacher_lesson_item_timetable_student"
                        android:layout_toEndOf="@+id/src_teacher_lesson_item_timetable_student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_gray"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/eye_show_teacher_visibility_settings"
                        android:layout_toEndOf="@+id/teacher_lesson_item_timetable_student"
                        android:layout_marginStart="20dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_eye"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_auditory_visibility_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/src_auditorium_lesson_item_timetable_student"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:text="Аудитория"
                        android:id="@+id/auditorium_lesson_item_timetable_student"
                        android:layout_toEndOf="@+id/src_auditorium_lesson_item_timetable_student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_gray"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/eye_show_auditory_visibility_settings"
                        android:layout_toEndOf="@+id/auditorium_lesson_item_timetable_student"
                        android:layout_marginStart="20dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_eye"/>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/error_message_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="Хотя бы 1 элемент должен быть виден!"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:visibility="gone"/>

</LinearLayout>
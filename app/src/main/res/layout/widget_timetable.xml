<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/widget_timetable_main_layout"
    android:background="@drawable/widget_main_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/day_week_widget_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сегодняшняя дата"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/even_uneven_widget_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="чётность недели"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/widget_timetable_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null" />

</LinearLayout>